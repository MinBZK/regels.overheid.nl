@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Classes
ex:Person rdf:type rdfs:Class ;
          rdfs:label "Person"@en ;
          rdfs:comment "A human being."@en .

ex:Family rdf:type rdfs:Class ;
          rdfs:label "Family"@en ;
          rdfs:comment "A unit consisting of parents and children."@en .

# Properties
ex:hasSpouse rdf:type rdf:Property ;
             rdfs:domain ex:Person ;
             rdfs:range ex:Person ;
             rdfs:label "has spouse"@en ;
             rdfs:comment "Links a person to their spouse."@en .

ex:hasChild rdf:type rdf:Property ;
            rdfs:domain ex:Person ;
            rdfs:range ex:Person ;
            rdfs:label "has child"@en ;
            rdfs:comment "Links a person to their child."@en .

ex:age rdf:type rdf:Property ;
       rdfs:domain ex:Person ;
       rdfs:range xsd:integer ;
       rdfs:label "age"@en ;
       rdfs:comment "The age of a person."@en .

# Individuals
ex:Lisotte rdf:type ex:Person ;
           ex:age 64 ;
           ex:hasSpouse ex:HansPeter ;
           ex:hasChild ex:Robert ;
           rdfs:label "Lisotte"@nl .

ex:HansPeter rdf:type ex:Person ;
             ex:age 64 ;
             ex:hasSpouse ex:Lisotte ;
             ex:hasChild ex:Robert ;
             rdfs:label "Hans-Peter"@nl .

ex:Robert rdf:type ex:Person ;
          ex:age 17 ;
          rdfs:label "Robert"@nl .

# Family Unit
ex:LisotteAndHansPeterFamily rdf:type ex:Family ;
                             rdfs:label "Lisotte and Hans-Peter Family"@en .
